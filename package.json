{
  "name": "dbushell.com",
  "private": true,
  "version": "10.2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dbushell/dbushell.com.git"
  },
  "author": "David Bushell <david@dbushell.com>",
  "license": "UNLICENSED - Copyright Â© David Bushell",
  "scripts": {
    "start": "npx http-server ./dbushell.github.io/",
    "build": "npx babel-node ./index.js",
    "test": "npx jest",
    "test-update": "npx jest --updateSnapshot",
    "webpack:dev": "npx webpack --mode development --debug",
    "webpack:prod": "npx webpack --mode production",
    "webpack": "npm run webpack:prod && npm run webpack:dev",
    "uglify": "cd ./dbushell.github.io/assets/js/ && npx uglifyjs -m --source-map \"url='/assets/js/inline.min.js.map'\" -o inline.min.js inline.js",
    "css": "node ./src/build/css.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "xo": {
    "space": true,
    "extends": [
      "xo-react"
    ],
    "envs": [
      "node",
      "browser",
      "jest"
    ],
    "ignores": [
      "src/data/**/*"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "react/no-danger": "warn",
      "react/prop-types": "off",
      "react/no-unused-prop-types": "off",
      "react/jsx-closing-bracket-location": {
        "nonEmpty": "line-aligned"
      },
      "react/jsx-tag-spacing": {
        "beforeSelfClosing": "allow"
      }
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".json"
          ]
        }
      }
    }
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/__tests__/shim.js",
      "<rootDir>/src/__tests__/setup.js"
    ],
    "roots": [
      "<rootDir>/src/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dbushell.github.io/",
      "<rootDir>/src/__tests__/.*\\.js$"
    ],
    "verbose": true
  },
  "dependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@babel/node": "^7.0.0-rc.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-rc.1",
    "@babel/polyfill": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/preset-react": "^7.0.0-rc.1",
    "autoprefixer": "^9.1.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0-beta.4",
    "chalk": "^2.4.1",
    "core-js": "^2.5.7",
    "enzyme": "^3.4.2",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "front-matter": "^2.3.0",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.2",
    "handlebars": "^4.0.11",
    "http-server": "^0.11.1",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "jest-enzyme": "^6.0.3",
    "js-beautify": "^1.7.5",
    "lodash.clonedeep": "^4.5.0",
    "lodash.compact": "^3.0.1",
    "lodash.merge": "^4.6.1",
    "lodash.toarray": "^4.4.0",
    "marked": "^0.4.0",
    "moment": "^2.22.2",
    "node-sass": "^4.9.3",
    "postcss": "^7.0.2",
    "prettier": "^1.14.2",
    "prismjs": "^1.15.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "shortid": "^2.2.12",
    "striptags": "^3.1.1",
    "uglify-js": "^3.4.7",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "xo": "^0.22.0",
    "yargs": "^12.0.1"
  }
}
