{
  "include": [
    "src/**/*.d.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.js"
  ],
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "removeComments": false,
    "types" : ["react"],
    "jsx": "preserve",
    "target": "es6",
    "moduleResolution": "node"
  }
}
